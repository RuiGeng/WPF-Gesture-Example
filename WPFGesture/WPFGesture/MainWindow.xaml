<Window
    x:Name="TheWindow"
    x:Class="WPFGesture.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPFGesture"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Gesture Example"
    Width="525"
    Height="350"
    DataContext="{Binding RelativeSource={RelativeSource self}}"
    IsManipulationEnabled="True"
    ManipulationCompleted="MainWindow_OnManipulationCompleted"
    ManipulationDelta="MainWindow_OnManipulationDelta"
    ManipulationInertiaStarting="MainWindow_OnManipulationInertiaStarting"
    ManipulationStarting="MainWindow_OnManipulationStarting"
    ManipulationStarted="MainWindow_OnManipulationStarted"
    WindowState="Maximized"
    StylusSystemGesture="MainWindow_OnStylusSystemGesture"
    mc:Ignorable="d">
    <StackPanel Background="AliceBlue">
        <TextBox
            Padding="10"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            FontSize="22"
            Text="{Binding Path=GestureText}" />
    </StackPanel>
</Window>